//C program for 2D matrix
#include <stdio.h>
int main()
{
  int i=0,j=0;
  int arr[3][3],arr2[3][3],arr3[3][3],arr4[3][3];
  printf("The first Matrix ");
  for (i=0;i<3;i++)
  {
      printf("\n \t Row: %d",i+1);
      for (j=0;j<3;j++)
      {
          printf("\n Write element row= %d Column= %d: ",i+1,j+1);
          scanf("%d",&arr[i][j]);}};
      printf("\n  Entered first Matrix ");
       for (i=0;i<3;i++)
        {
        printf("\n \t");
        for (j=0;j<3;j++)
          printf(" %d ",arr[i][j]);}
    printf("\n The Second Matrix ");
    for (i=0;i<3;i++)
  {
      printf("\n \t Row: %d",i+1);
      for (j=0;j<3;j++)
      {
          printf("\n Write element row= %d Column= %d: ",i+1,j+1);
          scanf("%d",&arr2[i][j]);}}
      printf("\n Entered Second Matrix ");
       for (i=0;i<3;i++)
        {
        printf("\n \t");
        for (j=0;j<3;j++)
          printf(" %d ",arr2[i][j]);}
     for (i=0;i<3;i++)
      for (j=0;j<3;j++)
         {arr3[i][j]=arr[i][j]+arr2[i][j];
         arr4[i][j]=arr[i][j]-arr2[i][j];}

    printf("\n\n The Sum of both matrix in an another matrix form ");
    for (i=0;i<3;i++)
    {
        printf("\n \t");
        for (j=0;j<3;j++)
          printf(" %d ",arr3[i][j]);}
    printf("\n\n The Difference of both matrix in an another matrix form ");
    for (i=0;i<3;i++)
    {
        printf("\n \t");
        for (j=0;j<3;j++)
          printf(" %d ",arr4[i][j]);}
    return 0;}
